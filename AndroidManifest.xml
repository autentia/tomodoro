<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autentia.tomodoro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme"
        >
        <activity
            android:name="com.autentia.tomodoro.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.autentia.tomodoro.ChronoActivity"
            android:label="@string/chrono"
            android:screenOrientation="portrait"
            android:alwaysRetainTaskState="true" >
            <intent-filter>
				<action android:name="com.autentia.CHRONO_ACTIVATED"/>  
        		<category android:name="android.intent.category.DEFAULT"/>  
            </intent-filter>
        </activity>
        <service android:name=".services.CountDownService" android:exported="false">
        </service>
    </application>

</manifest>